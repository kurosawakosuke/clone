<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<h3>Favorite Lists</h3>

<div class="container">

  <div class="row">
    <% @favorite_blogs.each do |favorites_blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <p>投稿者名：<%= favorites_blog.user.name %></p>
        <p><%= favorites_blog.content %></p>
      </div>

    <% end %>
  </div>
</div>
